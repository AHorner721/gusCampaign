<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <!-- navbar -->
    <nav class="nav-wrapper white"><%- include('../partials/nav'); %></nav>

    <!-- sidenav -->
    <ul class="sidenav sidenav-close blue darken-4" id="mobile-links">
      <%- include('../partials/sidenav'); %>
    </ul>

    <div class="landing scrollspy" id="top">
      <img
        src="/img/alderman_gus1.webp"
        alt="Banner: Gus Black Alderman, City of Richland. My voice is your voice."
      />
    </div>

    <!-- parallax -->
    <div class="parallax-container">
      <div class="parallax">
        <img
          src="/img/dave-sherrill-unsplash.jpg"
          alt="flag"
          class="responsive-img"
        />
      </div>
    </div>

    <!-- about gus -->
    <section class="container about-section center scrollspy" id="about">
      <%- include('../partials/about'); %>
    </section>

    <!-- parallax -->

    <div class="parallax-container">
      <div class="parallax">
        <img src="/img/flag5.jpg" alt="U.S. flag" class="responsive-img" />
      </div>
    </div>

    <!-- about highlights sections  -->

    <section class="container section scrollspy" id="about-highlights">
      <%- include('../partials/highlights'); %>
    </section>

    <!-- parallax -->

    <div class="parallax-container">
      <div class="parallax">
        <img src="/img/flag4.jpg" alt="flag" class="responsive-img" />
      </div>
    </div>

    <!-- vision section -->
    <section class="section container scrollspy" id="vision">
      <%- include('../partials/vision'); %>
    </section>

    <!-- parallax -->
    <div class="parallax-container">
      <div class="parallax">
        <img
          src="/img/american-flag-373362_1920.jpg"
          alt="United States Flag"
          class="responsive-img"
        />
      </div>
    </div>

    <!-- volunteer section -->
    <section class="container scrollspy" id="volunteer">
      <%- include('../partials/volunteer'); %>
    </section>

    <!-- parallax -->

    <div class="parallax-container">
      <div class="parallax">
        <img src="/img/flag6-op2.jpg" alt="flag" class="responsive-img" />
      </div>
    </div>

    <!-- donations section -->
    <section class="container scrollspy" id="donations">
      <%- include('../partials/donations'); %>
    </section>

    <!-- news section -->
    <section class="container scrollspy" id="news">
      <%- include('../partials/news'); %>
    </section>

    <!-- footer -->
    <footer class="page-footer blue darken-4">
      <%- include('../partials/footer'); %>
    </footer>

    <!-- load service worker -->
    <script src="/loader.js"></script>
    <!-- stripe library -->
    <script src="https://js.stripe.com/v3/"></script>
    <!-- select donation amounts -->
    <script type="text/javascript" src="/amt.js"></script>
    <!-- min jquery lib -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Compiled and minified Materialize Lib -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- jquery functions -->
    <script>
      $(document).ready(function () {
        $(".sidenav").sidenav();
        $(".modal").modal();
        $(".parallax").parallax();
        $(".materialboxed").materialbox();
        $(".scrollspy").scrollSpy();
        $(".slider").slider();
        $(".tooltipped").tooltip();
      });
    </script>
    <!-- facebook SDK -->
    <script
      async
      defer
      crossorigin="anonymous"
      src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v17.0"
      nonce="dJamGsje"
    ></script>
  </body>
</html>
